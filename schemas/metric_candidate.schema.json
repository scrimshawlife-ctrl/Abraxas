{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://abraxas.dev/schemas/metric_candidate.schema.json",
  "title": "Abraxas Candidate Metric Schema",
  "description": "Schema for candidate metrics. All emergent metrics start here and must earn promotion through evidence-based gates.",
  "type": "object",
  "required": [
    "provenance",
    "falsifiability",
    "status",
    "required_rune_bindings",
    "target_sim_variables",
    "version"
  ],
  "properties": {
    "provenance": {
      "type": "object",
      "required": [
        "metric_id",
        "description",
        "units",
        "valid_range",
        "dependencies",
        "compute_fn",
        "input_sources"
      ],
      "properties": {
        "metric_id": {
          "type": "string",
          "pattern": "^[A-Z][A-Z0-9_]*$",
          "description": "Unique metric identifier (uppercase snake_case)"
        },
        "description": {
          "type": "string",
          "minLength": 10,
          "description": "What this metric measures"
        },
        "units": {
          "type": "string",
          "description": "Measurement units"
        },
        "valid_range": {
          "type": "object",
          "required": ["min", "max"],
          "properties": {
            "min": {"type": "number"},
            "max": {"type": "number"}
          }
        },
        "dependencies": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Other metrics this depends on"
        },
        "compute_fn": {
          "type": "string",
          "description": "Reference to computation function or formula"
        },
        "input_sources": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["source", "hash"],
            "properties": {
              "source": {"type": "string"},
              "hash": {"type": "string", "pattern": "^[a-f0-9]{64}$"}
            }
          },
          "description": "Input data sources with SHA-256 hashes"
        }
      }
    },
    "falsifiability": {
      "type": "object",
      "required": [
        "predictions_influenced",
        "disconfirmation_criteria",
        "evaluation_window"
      ],
      "properties": {
        "predictions_influenced": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"},
          "description": "Variable IDs this metric influences"
        },
        "disconfirmation_criteria": {
          "type": "object",
          "description": "What would reduce confidence in this metric"
        },
        "evaluation_window": {
          "type": "integer",
          "minimum": 1,
          "description": "Timesteps for evaluation"
        }
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "PROPOSED",
        "SHADOW",
        "SCORED",
        "STABILIZING",
        "READY",
        "PROMOTED",
        "REJECTED",
        "MERGED"
      ],
      "description": "Lifecycle status"
    },
    "required_rune_bindings": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Rune IDs this metric requires"
    },
    "target_sim_variables": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Variable IDs this metric targets"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version"
    },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    },
    "evaluation_history": {
      "type": "array",
      "items": {"type": "object"}
    }
  },
  "additionalProperties": false
}
