{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://abraxas.dev/schemas/runheader.v0.schema.json",
  "title": "RunHeader.v0",
  "description": "Run-level provenance written once per run_id",
  "type": "object",
  "required": ["schema", "run_id", "mode", "code", "pipeline_bindings", "policy_refs", "env"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "RunHeader.v0"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "mode": {
      "type": "string"
    },
    "code": {
      "type": "object",
      "required": ["git_sha"],
      "properties": {
        "git_sha": { "type": ["string", "null"] }
      },
      "additionalProperties": true
    },
    "pipeline_bindings": {
      "type": "object",
      "additionalProperties": true
    },
    "policy_refs": {
      "type": "object",
      "additionalProperties": true
    },
    "stability_ref_pattern": {
      "type": "string"
    },
    "env": {
      "type": "object",
      "properties": {
        "python": {
          "type": "object",
          "properties": {
            "version": { "type": "string" },
            "implementation": { "type": "string" }
          }
        },
        "platform": {
          "type": "object",
          "properties": {
            "system": { "type": "string" },
            "release": { "type": "string" },
            "machine": { "type": "string" }
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
