{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/acceptance/v1/acceptance_status.schema.json",
  "title": "Abraxas Acceptance Status v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "created_at", "run_window", "hard_gates", "results", "overall"],
  "properties": {
    "schema_version": { "type": "string", "pattern": "^1\\.[0-9]+\\.[0-9]+$" },
    "created_at": { "type": "string", "minLength": 10 },
    "run_window": {
      "type": "object",
      "additionalProperties": false,
      "required": ["artifact_count"],
      "properties": {
        "artifact_count": { "type": "integer", "minimum": 0 },
        "start_created_at": { "type": ["string", "null"] },
        "end_created_at": { "type": ["string", "null"] }
      }
    },
    "hard_gates": { "type": "array", "items": { "type": "string" } },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "ok", "details"],
        "properties": {
          "name": { "type": "string" },
          "ok": { "type": "boolean" },
          "details": { "type": "string" }
        }
      }
    },
    "overall": {
      "type": "object",
      "additionalProperties": false,
      "required": ["ok", "failures"],
      "properties": {
        "ok": { "type": "boolean" },
        "failures": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
