{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://abraxas.dev/schemas/analysis/event_correlation/v1/drift_report.schema.json",
  "title": "Abraxas Drift Report v1 (Event Correlation v0.1)",
  "description": "Offline, shadow-lane drift correlation report. Evidence is auditable via (artifact_id, JSON pointer).",
  "type": "object",
  "required": ["schema_version", "window", "clusters"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "drift_report_v1"
    },
    "window": {
      "type": "object",
      "required": ["start_artifact_ts", "end_artifact_ts", "artifact_count"],
      "properties": {
        "start_artifact_ts": { "type": ["string", "null"] },
        "end_artifact_ts": { "type": ["string", "null"] },
        "artifact_count": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "clusters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "cluster_id",
          "domains_involved",
          "shared_motifs",
          "strength_score",
          "confidence",
          "lead_lag",
          "evidence_refs"
        ],
        "properties": {
          "cluster_id": { "type": "string", "minLength": 1 },
          "domains_involved": {
            "type": "array",
            "items": { "type": "string" }
          },
          "shared_motifs": {
            "type": "array",
            "items": { "type": "string" }
          },
          "strength_score": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
          },
          "confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
          },
          "lead_lag": {
            "description": "Reserved for future time-series rigor; null in v0.1.",
            "type": ["object", "null"]
          },
          "evidence_refs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["artifact_id", "pointer", "value_preview"],
              "properties": {
                "artifact_id": { "type": "string", "minLength": 1 },
                "pointer": { "type": "string", "minLength": 1 },
                "value_preview": { "type": "string" }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
