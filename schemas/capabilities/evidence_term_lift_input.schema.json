{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence Term Lift Input",
  "description": "Input schema for evidence.lift.term_lift capability",
  "type": "object",
  "required": ["bundles"],
  "properties": {
    "bundles": {
      "type": "array",
      "description": "List of evidence bundles from load_bundles_from_index",
      "items": {
        "type": "object",
        "properties": {
          "bundle_id": {"type": "string"},
          "terms": {
            "type": "array",
            "items": {"type": "string"}
          },
          "source_type": {"type": "string"},
          "credence": {"type": "number"}
        },
        "additionalProperties": true
      }
    },
    "seed": {
      "type": ["integer", "null"],
      "description": "Optional deterministic seed"
    }
  },
  "additionalProperties": false
}
