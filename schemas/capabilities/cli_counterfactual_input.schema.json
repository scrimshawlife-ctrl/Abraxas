{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CLI Counterfactual Input",
  "description": "Input schema for cli.counterfactual capability",
  "type": "object",
  "required": ["args"],
  "properties": {
    "args": {
      "type": "object",
      "description": "CLI arguments for counterfactual replay",
      "properties": {
        "run_id": {"type": "string"},
        "portfolio": {"type": "string"},
        "mask": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Replay mask specs"
        },
        "cases_dir": {"type": "string"},
        "portfolios_path": {"type": "string"},
        "fdr_path": {"type": "string"},
        "overrides_path": {"type": "string"}
      },
      "required": ["run_id", "portfolio"]
    },
    "seed": {
      "type": ["integer", "null"],
      "description": "Deterministic seed for provenance"
    }
  },
  "additionalProperties": false
}
