{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://abraxas.dev/schemas/capabilities/proof_bundle_output.json",
  "title": "Proof Bundle Output",
  "description": "Output schema for artifacts.proof_bundle.generate capability",
  "type": "object",
  "required": ["bundle", "provenance", "not_computable"],
  "properties": {
    "bundle": {
      "type": "object",
      "required": ["bundle_dir", "bundle_manifest", "ledger_pointer", "missing"],
      "properties": {
        "bundle_dir": {"type": "string"},
        "bundle_manifest": {"type": "string"},
        "ledger_pointer": {"type": "string"},
        "missing": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "provenance": {
      "type": ["object", "null"],
      "description": "Provenance envelope with SHA-256 hash",
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "artifacts.proof_bundle.generate"
        },
        "inputs_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "timestamp_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - proof bundle generation is deterministic"
    }
  },
  "additionalProperties": false,
  "x-abraxas": {
    "capability_id": "artifacts.proof_bundle.generate",
    "version": "1.0.0",
    "deterministic": true,
    "provenance_required": true
  }
}
