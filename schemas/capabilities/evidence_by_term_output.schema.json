{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence By Term Output",
  "description": "Output schema for evidence.index.evidence_by_term capability",
  "type": "object",
  "required": ["evidence_by_term", "provenance", "not_computable"],
  "properties": {
    "evidence_by_term": {
      "type": "object",
      "description": "Term (lowercase) â†’ list of evidence bundles",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "description": "Evidence bundle with claims, credence, terms, etc.",
          "additionalProperties": true
        }
      }
    },
    "provenance": {
      "type": ["object", "null"],
      "description": "Provenance envelope with SHA-256 hash",
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "evidence.index.evidence_by_term"
        },
        "inputs_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "timestamp_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - evidence indexing never fails, returns empty dict on error"
    }
  },
  "additionalProperties": false
}
