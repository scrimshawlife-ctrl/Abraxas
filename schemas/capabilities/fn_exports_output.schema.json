{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://abraxas.dev/schemas/capabilities/fn_exports_output.json",
  "title": "Function Exports Output",
  "description": "Output schema for core.fn_exports.load capability",
  "type": "object",
  "required": ["payload", "provenance", "not_computable"],
  "properties": {
    "payload": {
      "type": "object",
      "required": ["owner", "generated_at_unix", "functions"],
      "properties": {
        "owner": {
          "type": "string"
        },
        "generated_at_unix": {
          "type": "integer"
        },
        "functions": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": false
    },
    "provenance": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "operation_id",
            "inputs_sha256",
            "config_sha256",
            "timestamp_utc",
            "runtime_fingerprint"
          ],
          "properties": {
            "operation_id": {
              "type": "string",
              "const": "core.fn_exports.load"
            },
            "inputs_sha256": {
              "type": "string",
              "pattern": "^[a-f0-9]{64}$"
            },
            "config_sha256": {
              "type": "string",
              "pattern": "^[a-f0-9]{64}$"
            },
            "timestamp_utc": {
              "type": "string",
              "format": "date-time"
            },
            "repo_commit": {
              "type": "string"
            },
            "seed": {
              "type": "integer"
            },
            "runtime_fingerprint": {
              "type": "object",
              "required": ["python", "platform"],
              "properties": {
                "python": {"type": "string"},
                "platform": {"type": "string"}
              }
            }
          },
          "additionalProperties": true
        },
        {
          "type": "null"
        }
      ]
    },
    "not_computable": {
      "oneOf": [
        {
          "type": "object",
          "required": ["reason"],
          "properties": {
            "reason": {
              "type": "string"
            },
            "missing_inputs": {
              "type": "array",
              "items": {"type": "string"}
            }
          }
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "additionalProperties": false,
  "x-abraxas": {
    "capability_id": "core.fn_exports.load",
    "version": "1.0.0",
    "deterministic": true,
    "no_influence_guarantee": false,
    "evidence_mode": "policy_enforcement"
  }
}
