{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://abraxas.dev/schemas/capabilities/apply_disinfo_metrics_output.json",
  "title": "Apply Disinfo Metrics Output",
  "description": "Output schema for disinfo.metrics.apply capability",
  "type": "object",
  "required": ["item", "provenance", "not_computable"],
  "properties": {
    "item": {
      "type": "object",
      "description": "Evidence item enriched with disinfo metrics",
      "additionalProperties": true
    },
    "provenance": {
      "type": ["object", "null"],
      "required": ["operation_id", "inputs_sha256", "config_sha256", "timestamp_utc", "runtime_fingerprint"],
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "disinfo.metrics.apply"
        },
        "inputs_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
        "config_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
        "timestamp_utc": {"type": "string", "format": "date-time"},
        "repo_commit": {"type": "string"},
        "seed": {"type": "integer"},
        "runtime_fingerprint": {
          "type": "object",
          "required": ["python", "platform"],
          "properties": {
            "python": {"type": "string"},
            "platform": {"type": "string"}
          }
        }
      },
      "additionalProperties": true
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - disinfo metrics application never fails"
    }
  },
  "additionalProperties": false,
  "x-abraxas": {
    "capability_id": "disinfo.metrics.apply",
    "version": "1.0.0",
    "deterministic": true,
    "provenance_required": true
  }
}
