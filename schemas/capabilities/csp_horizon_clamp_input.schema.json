{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Conspiracy CSP Horizon Clamp Input",
  "description": "Input schema for conspiracy.policy.horizon_clamp capability",
  "type": "object",
  "required": ["csp", "dmx_bucket", "term_class"],
  "properties": {
    "csp": {
      "type": "object",
      "description": "Conspiracy Susceptibility Profile with MIO, FF, EA, CIP, COH metrics",
      "properties": {
        "MIO": {"type": "number"},
        "FF": {"type": "number"},
        "EA": {"type": "number"},
        "CIP": {"type": "number"},
        "COH": {"type": "boolean"}
      }
    },
    "dmx_bucket": {
      "type": "string",
      "description": "DMX manipulation risk bucket (LOW, MED, HIGH, UNKNOWN)"
    },
    "term_class": {
      "type": "string",
      "description": "Term classification (stable, contested, volatile, unknown)"
    }
  },
  "additionalProperties": false
}
