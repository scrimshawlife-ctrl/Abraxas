{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Acquire Decodo Status Output",
  "description": "Output schema for acquire.decodo.status capability",
  "type": "object",
  "required": ["status", "provenance", "not_computable"],
  "properties": {
    "status": {
      "type": "object",
      "required": ["available", "reason"],
      "properties": {
        "available": {"type": "boolean"},
        "reason": {"type": "string"}
      }
    },
    "provenance": {
      "type": ["object", "null"],
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "acquire.decodo.status"
        },
        "inputs_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
        "timestamp_utc": {"type": "string", "format": "date-time"}
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - status check never fails"
    }
  },
  "additionalProperties": false
}
