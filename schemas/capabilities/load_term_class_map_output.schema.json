{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://abraxas.dev/schemas/capabilities/load_term_class_map_output.json",
  "title": "Load Term Class Map Output",
  "description": "Output schema for forecast.term_class_map.load capability",
  "type": "object",
  "required": ["success", "term_class_map", "provenance", "not_computable"],
  "properties": {
    "success": {
      "type": "boolean",
      "description": "Whether the operation succeeded"
    },
    "term_class_map": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "enum": ["stable", "emerging", "contested", "volatile", "unknown"]
          },
          "description": "Map of term (lowercase) -> classification"
        },
        {"type": "null"}
      ],
      "description": "Term classification map (null if failed)"
    },
    "provenance": {
      "oneOf": [
        {
          "type": "object",
          "required": ["operation_id", "config_sha256", "inputs_sha256"],
          "properties": {
            "operation_id": {"type": "string"},
            "config_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
            "inputs_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
            "seed": {"type": ["integer", "null"]}
          }
        },
        {"type": "null"}
      ],
      "description": "Provenance envelope with SHA-256 hashes"
    },
    "not_computable": {
      "oneOf": [
        {
          "type": "object",
          "required": ["reason", "missing_inputs"],
          "properties": {
            "reason": {"type": "string"},
            "missing_inputs": {
              "type": "array",
              "items": {"type": "string"}
            }
          }
        },
        {"type": "null"}
      ],
      "description": "Error details if operation failed"
    }
  },
  "additionalProperties": false,
  "x-abraxas": {
    "capability_id": "forecast.term_class_map.load",
    "version": "1.0.0"
  }
}
