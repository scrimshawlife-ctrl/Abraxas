{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://abraxas.dev/schemas/capabilities/claim_cluster_output.json",
  "title": "Claim Cluster Output",
  "description": "Output schema for memetic.claim_cluster.cluster capability",
  "type": "object",
  "required": ["clusters", "metrics", "provenance", "not_computable"],
  "properties": {
    "clusters": {
      "type": "array",
      "description": "List of clustered index groups",
      "items": {
        "type": "array",
        "items": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Cluster metrics summary",
      "required": ["n_items", "n_clusters", "dominance", "contradiction_rate", "consensus_gap"],
      "properties": {
        "n_items": {
          "type": "integer",
          "minimum": 0
        },
        "n_clusters": {
          "type": "integer",
          "minimum": 0
        },
        "dominance": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "contradiction_rate": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "consensus_gap": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        }
      }
    },
    "provenance": {
      "type": ["object", "null"],
      "description": "Provenance envelope with SHA-256 hash",
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "memetic.claim_cluster.cluster"
        },
        "inputs_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "timestamp_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - clustering is deterministic"
    }
  },
  "additionalProperties": false,
  "x-abraxas": {
    "capability_id": "memetic.claim_cluster.cluster",
    "version": "1.0.0",
    "deterministic": true,
    "provenance_required": true
  }
}
