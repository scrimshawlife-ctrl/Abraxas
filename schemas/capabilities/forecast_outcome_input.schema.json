{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://abraxas.dev/schemas/capabilities/forecast_outcome_input.json",
  "title": "Forecast Outcome Input",
  "description": "Input schema for forecast.outcome.record capability",
  "type": "object",
  "required": ["pred_id", "result", "run_id"],
  "properties": {
    "pred_id": {
      "type": "string",
      "minLength": 1
    },
    "result": {
      "type": "string",
      "enum": ["hit", "miss", "partial"]
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "notes": {
      "type": "string"
    },
    "ts_observed": {
      "type": ["string", "null"]
    },
    "ledger_path": {
      "type": "string",
      "minLength": 1
    },
    "seed": {
      "type": ["integer", "null"],
      "description": "Optional deterministic seed (unused but kept for consistency)"
    }
  },
  "additionalProperties": false,
  "x-abraxas": {
    "capability_id": "forecast.outcome.record",
    "version": "1.0.0",
    "deterministic": true,
    "provenance_required": true
  }
}
