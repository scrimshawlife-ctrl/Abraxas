{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://abraxas.dev/schemas/capabilities/ledger_append_input.json",
  "title": "Ledger Append Input",
  "description": "Input schema for evolve.ledger.append capability",
  "type": "object",
  "required": ["ledger_path", "record"],
  "properties": {
    "ledger_path": {
      "type": "string",
      "minLength": 1,
      "description": "Path to JSONL ledger file (will be created if doesn't exist)"
    },
    "record": {
      "type": "object",
      "description": "Record to append to ledger (will be augmented with prev_hash and step_hash)",
      "additionalProperties": true
    },
    "seed": {
      "type": "integer",
      "description": "Optional deterministic seed (unused for ledger append, kept for consistency)"
    }
  },
  "additionalProperties": false,
  "x-abraxas": {
    "capability_id": "evolve.ledger.append",
    "version": "1.0.0",
    "deterministic": true,
    "provenance_required": true
  }
}
