{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Render Output Output",
  "description": "Output schema for core.rendering.render_output capability",
  "type": "object",
  "required": ["rendered_text", "provenance", "not_computable"],
  "properties": {
    "rendered_text": {
      "type": "string",
      "description": "The rendered text (unchanged from draft_text)"
    },
    "provenance": {
      "type": ["object", "null"],
      "description": "Canonical provenance envelope",
      "required": [
        "operation_id",
        "inputs_sha256",
        "config_sha256",
        "timestamp_utc",
        "runtime_fingerprint"
      ],
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "core.rendering.render_output"
        },
        "inputs_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
        "config_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
        "timestamp_utc": {"type": "string", "format": "date-time"},
        "repo_commit": {"type": "string"},
        "seed": {"type": "integer"},
        "runtime_fingerprint": {
          "type": "object",
          "required": ["python", "platform"],
          "properties": {
            "python": {"type": "string"},
            "platform": {"type": "string"}
          }
        }
      },
      "additionalProperties": true
    },
    "not_computable": {
      "type": "null",
      "description": "Always null for this capability"
    }
  },
  "additionalProperties": false
}
