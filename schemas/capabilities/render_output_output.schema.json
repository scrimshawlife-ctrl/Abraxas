{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Render Output Output",
  "description": "Output schema for core.rendering.render_output capability",
  "type": "object",
  "required": ["rendered_text", "provenance", "not_computable"],
  "properties": {
    "rendered_text": {
      "type": "string",
      "description": "The rendered text (unchanged from draft_text)"
    },
    "provenance": {
      "type": "object",
      "description": "SHA-256 provenance envelope",
      "required": ["inputs_hash", "outputs_hash", "config_hash"],
      "properties": {
        "inputs_hash": {"type": "string"},
        "outputs_hash": {"type": "string"},
        "config_hash": {"type": "string"},
        "envelope_hash": {"type": "string"}
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null for this capability"
    }
  },
  "additionalProperties": false
}
