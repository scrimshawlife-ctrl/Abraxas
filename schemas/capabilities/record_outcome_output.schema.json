{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Forecast Record Outcome Output",
  "description": "Output schema for forecast.ledger.record_outcome capability",
  "type": "object",
  "required": ["outcome_row", "provenance", "not_computable"],
  "properties": {
    "outcome_row": {
      "type": ["object", "null"],
      "description": "Recorded outcome row",
      "properties": {
        "version": {"type": "string", "const": "forecast_outcome_row.v0.1"},
        "pred_id": {"type": "string"},
        "ts_observed": {"type": "string"},
        "result": {"type": "string"},
        "notes": {"type": "string"},
        "evidence": {"type": "array"},
        "provenance": {"type": "object"}
      }
    },
    "provenance": {
      "type": ["object", "null"],
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "forecast.ledger.record_outcome"
        },
        "inputs_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
        "timestamp_utc": {"type": "string", "format": "date-time"}
      }
    },
    "not_computable": {
      "type": ["object", "null"],
      "properties": {
        "reason": {"type": "string"},
        "missing_inputs": {"type": "array", "items": {"type": "string"}}
      }
    }
  },
  "additionalProperties": false
}
