{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Apply Disinfo Metrics Input",
  "description": "Input schema for disinfo.apply.metrics capability",
  "type": "object",
  "required": ["item"],
  "properties": {
    "item": {
      "type": "object",
      "description": "Item to apply disinfo metrics to (source, context, etc.)",
      "properties": {
        "source_type": {"type": "string"},
        "source_ref": {"type": "string"},
        "source": {"type": "object"},
        "media_kind": {"type": "string"},
        "context": {"type": "object"}
      }
    },
    "seed": {
      "type": ["integer", "null"],
      "description": "Optional seed for SEED compliance"
    }
  },
  "additionalProperties": false
}
