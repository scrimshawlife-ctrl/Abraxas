{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Build EPP Output",
  "description": "Output schema for evolve.epp.build capability",
  "type": "object",
  "required": ["json_path", "md_path", "provenance", "not_computable"],
  "properties": {
    "json_path": {
      "type": ["string", "null"],
      "description": "Path to generated EPP JSON report"
    },
    "md_path": {
      "type": ["string", "null"],
      "description": "Path to generated EPP Markdown report"
    },
    "provenance": {
      "type": ["object", "null"],
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "evolve.epp.build"
        },
        "inputs_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
        "timestamp_utc": {"type": "string", "format": "date-time"}
      }
    },
    "not_computable": {
      "type": ["object", "null"],
      "properties": {
        "reason": {"type": "string"},
        "missing_inputs": {"type": "array", "items": {"type": "string"}}
      }
    }
  },
  "additionalProperties": false
}
