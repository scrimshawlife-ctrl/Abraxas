{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CLI SMV Output",
  "description": "Output schema for cli.smv capability",
  "type": "object",
  "required": ["exit_code", "provenance", "not_computable"],
  "properties": {
    "exit_code": {
      "type": "integer",
      "description": "CLI exit code (0 = success)"
    },
    "provenance": {
      "type": "object",
      "description": "SHA-256 provenance envelope",
      "required": ["inputs_hash", "outputs_hash", "config_hash"],
      "properties": {
        "inputs_hash": {"type": "string"},
        "outputs_hash": {"type": "string"},
        "config_hash": {"type": "string"},
        "envelope_hash": {"type": "string"}
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null for this capability"
    }
  },
  "additionalProperties": false
}
