{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OSH Run Jobs Input",
  "description": "Input schema for osh.run_jobs capability",
  "type": "object",
  "required": ["jobs"],
  "properties": {
    "jobs": {
      "type": "array",
      "description": "List of OSHFetchJob objects to execute"
    },
    "out_dir": {
      "type": "string",
      "description": "Output directory for artifacts",
      "default": "out"
    },
    "seed": {
      "type": ["integer", "null"],
      "description": "Deterministic seed for provenance"
    }
  },
  "additionalProperties": false
}
