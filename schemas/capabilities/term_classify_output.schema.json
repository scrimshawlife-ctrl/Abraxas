{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Term Classification Output",
  "description": "Output schema for forecast.term.classify capability",
  "type": "object",
  "required": ["term_class", "provenance", "not_computable"],
  "properties": {
    "term_class": {
      "type": "string",
      "enum": ["stable", "emerging", "contested", "volatile", "unknown"],
      "description": "Classified term stability category"
    },
    "provenance": {
      "type": ["object", "null"],
      "description": "Provenance envelope with SHA-256 hash",
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "forecast.term.classify"
        },
        "inputs_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - term classification never fails, returns 'unknown' for invalid inputs"
    }
  },
  "additionalProperties": false
}
