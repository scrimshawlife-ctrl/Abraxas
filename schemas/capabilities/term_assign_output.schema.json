{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Assign Claim to Terms Output",
  "description": "Output schema for memetic.term_assign.assign capability",
  "type": "object",
  "required": ["assigned_terms", "provenance", "not_computable"],
  "properties": {
    "assigned_terms": {
      "type": "array",
      "description": "List of terms assigned to claim (ranked by token overlap)",
      "items": {
        "type": "string"
      }
    },
    "provenance": {
      "type": ["object", "null"],
      "description": "Provenance envelope with SHA-256 hash",
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "memetic.term_assign.assign"
        },
        "inputs_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "timestamp_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - term assignment never fails, returns empty list on error"
    }
  },
  "additionalProperties": false
}
