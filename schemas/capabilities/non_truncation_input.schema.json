{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://abraxas.dev/schemas/capabilities/non_truncation_input.json",
  "title": "Non-Truncation Policy Input",
  "description": "Input schema for evolve.policy.enforce_non_truncation capability",
  "type": "object",
  "required": ["artifact", "raw_full"],
  "properties": {
    "artifact": {
      "type": "object",
      "description": "The artifact to augment with non-truncation policy",
      "additionalProperties": true
    },
    "raw_full": {
      "description": "Full raw data to preserve (embedded or written to disk)",
      "oneOf": [
        {"type": "object"},
        {"type": "array"},
        {"type": "string"},
        {"type": "number"},
        {"type": "boolean"},
        {"type": "null"}
      ]
    },
    "raw_full_path": {
      "type": "string",
      "minLength": 1,
      "description": "Optional path to write raw_full to disk (instead of embedding)"
    },
    "seed": {
      "type": "integer",
      "description": "Optional deterministic seed (unused for policy enforcement, kept for consistency)"
    }
  },
  "additionalProperties": false,
  "x-abraxas": {
    "capability_id": "evolve.policy.enforce_non_truncation",
    "version": "1.0.0",
    "deterministic": true,
    "provenance_required": true
  }
}
