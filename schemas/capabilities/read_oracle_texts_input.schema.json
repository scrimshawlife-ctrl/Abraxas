{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Memetic Read Oracle Texts Input",
  "description": "Input schema for memetic.extract.read_oracle_texts capability",
  "type": "object",
  "required": ["path"],
  "properties": {
    "path": {
      "type": "string",
      "description": "Path to oracle texts file (JSON or JSONL)"
    },
    "max_items": {
      "type": "integer",
      "minimum": 1,
      "default": 200,
      "description": "Maximum number of items to read"
    }
  },
  "additionalProperties": false
}
