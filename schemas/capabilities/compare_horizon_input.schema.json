{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Forecast Compare Horizon Input",
  "description": "Input schema for forecast.horizon_policy.compare capability",
  "type": "object",
  "required": ["horizon", "max_horizon"],
  "properties": {
    "horizon": {
      "type": "string",
      "description": "Horizon to compare (days, weeks, months, years, years_1, years_5)"
    },
    "max_horizon": {
      "type": "string",
      "description": "Maximum horizon to compare against"
    }
  },
  "additionalProperties": false
}
