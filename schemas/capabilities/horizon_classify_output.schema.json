{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://abraxas.dev/schemas/capabilities/horizon_classify_output.json",
  "title": "Horizon Classification Output",
  "description": "Output schema for forecast.horizon.classify capability",
  "type": "object",
  "required": ["horizon_bucket", "provenance"],
  "properties": {
    "horizon_bucket": {
      "type": "string",
      "enum": ["days", "weeks", "months", "years", "unknown"],
      "description": "Normalized horizon bucket"
    },
    "provenance": {
      "type": "object",
      "required": ["operation_id", "inputs_hash", "timestamp"],
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "forecast.horizon.classify"
        },
        "inputs_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 hash of canonical inputs"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO8601 timestamp with Z timezone"
        },
        "seed": {
          "type": "integer",
          "description": "Deterministic seed used"
        }
      },
      "additionalProperties": true
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - horizon classification never fails"
    }
  },
  "additionalProperties": false,
  "x-abraxas": {
    "capability_id": "forecast.horizon.classify",
    "version": "1.0.0",
    "deterministic": true,
    "no_influence_guarantee": false,
    "evidence_mode": "classification"
  }
}
