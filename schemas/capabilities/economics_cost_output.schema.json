{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://abraxas.dev/schemas/capabilities/economics_cost_output.json",
  "title": "Economics Cost Output",
  "description": "Output schema for economics.costing.compute capability",
  "type": "object",
  "required": ["cost", "provenance", "not_computable"],
  "properties": {
    "cost": {
      "type": "object",
      "required": [
        "sources",
        "claims",
        "clusters",
        "terms",
        "predictions",
        "base_credits",
        "total_credits"
      ],
      "properties": {
        "sources": {"type": "integer", "minimum": 0},
        "claims": {"type": "integer", "minimum": 0},
        "clusters": {"type": "integer", "minimum": 0},
        "terms": {"type": "integer", "minimum": 0},
        "predictions": {"type": "integer", "minimum": 0},
        "base_credits": {"type": "integer", "minimum": 0},
        "total_credits": {"type": "integer", "minimum": 0}
      }
    },
    "provenance": {
      "type": ["object", "null"],
      "description": "Provenance envelope with SHA-256 hash",
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "economics.costing.compute"
        },
        "inputs_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "timestamp_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - cost computation is deterministic"
    }
  },
  "additionalProperties": false,
  "x-abraxas": {
    "capability_id": "economics.costing.compute",
    "version": "1.0.0",
    "deterministic": true,
    "provenance_required": true
  }
}
