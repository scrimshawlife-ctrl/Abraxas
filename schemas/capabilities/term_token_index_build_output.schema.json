{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Build Term Token Index Output",
  "description": "Output schema for memetic.term_assign.build_index capability",
  "type": "object",
  "required": ["term_token_index", "provenance", "not_computable"],
  "properties": {
    "term_token_index": {
      "type": "object",
      "description": "Term → token set index (lowercase term keys → list of token strings)",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "provenance": {
      "type": ["object", "null"],
      "description": "Provenance envelope with SHA-256 hash",
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "memetic.term_assign.build_index"
        },
        "inputs_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "timestamp_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - index building never fails, returns empty dict on error"
    }
  },
  "additionalProperties": false
}
