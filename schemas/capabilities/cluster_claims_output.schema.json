{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cluster Claims Output",
  "description": "Output schema for memetic.claim_cluster.cluster capability",
  "type": "object",
  "required": ["clusters", "metrics", "provenance", "not_computable"],
  "properties": {
    "clusters": {
      "type": "array",
      "description": "List of clusters, each cluster is a list of item indices",
      "items": {
        "type": "array",
        "description": "Cluster of item indices",
        "items": {
          "type": "integer"
        }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Clustering metrics",
      "required": ["n_items", "n_clusters", "dominance", "contradiction_rate", "consensus_gap"],
      "properties": {
        "n_items": {
          "type": "integer",
          "description": "Total number of items clustered"
        },
        "n_clusters": {
          "type": "integer",
          "description": "Number of clusters formed"
        },
        "dominance": {
          "type": "number",
          "description": "Fraction of items in largest cluster"
        },
        "contradiction_rate": {
          "type": "number",
          "description": "Contradiction rate metric"
        },
        "consensus_gap": {
          "type": "number",
          "description": "Consensus gap metric [0, 1]"
        }
      }
    },
    "provenance": {
      "type": ["object", "null"],
      "description": "Provenance envelope with SHA-256 hash",
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "memetic.claim_cluster.cluster"
        },
        "inputs_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "timestamp_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - clustering never fails, returns empty clusters on error"
    }
  },
  "additionalProperties": false
}
