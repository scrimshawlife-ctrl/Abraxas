{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Analyze Drift Input",
  "description": "Input schema for drift.orchestrator.analyze_text_for_drift capability",
  "type": "object",
  "required": ["text", "provenance"],
  "properties": {
    "text": {
      "type": "string",
      "description": "The text to analyze for drift indicators"
    },
    "provenance": {
      "type": "object",
      "description": "ProvenanceBundle as dict with inputs, transforms, metadata",
      "required": ["inputs", "transforms"],
      "properties": {
        "inputs": {
          "type": "array",
          "description": "List of ProvenanceRef objects"
        },
        "transforms": {
          "type": "array",
          "description": "List of transform identifiers",
          "items": {"type": "string"}
        },
        "metadata": {
          "type": ["object", "null"],
          "description": "Optional metadata dict",
          "additionalProperties": true
        }
      }
    },
    "seed": {
      "type": ["integer", "null"],
      "description": "Optional seed for SEED compliance"
    }
  },
  "additionalProperties": false
}
