{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://abraxas.dev/schemas/capabilities/horizon_classify_input.json",
  "title": "Horizon Classification Input",
  "description": "Input schema for forecast.horizon.classify capability",
  "type": "object",
  "required": ["horizon"],
  "properties": {
    "horizon": {
      "description": "Horizon value to classify (any type - will be converted to string)",
      "oneOf": [
        {"type": "string"},
        {"type": "number"},
        {"type": "null"}
      ]
    },
    "seed": {
      "type": "integer",
      "description": "Optional deterministic seed (unused for classification, kept for consistency)"
    }
  },
  "additionalProperties": false,
  "x-abraxas": {
    "capability_id": "forecast.horizon.classify",
    "version": "1.0.0",
    "deterministic": true,
    "provenance_required": true
  }
}
