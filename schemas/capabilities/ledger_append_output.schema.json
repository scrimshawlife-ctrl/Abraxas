{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://abraxas.dev/schemas/capabilities/ledger_append_output.json",
  "title": "Ledger Append Output",
  "description": "Output schema for evolve.ledger.append capability",
  "type": "object",
  "required": ["step_hash", "prev_hash", "provenance"],
  "properties": {
    "step_hash": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 hash of the appended entry (forms the hash chain)"
        },
        {
          "type": "null",
          "description": "Null if not computable"
        }
      ]
    },
    "prev_hash": {
      "oneOf": [
        {
          "type": "string",
          "description": "Previous hash in chain ('genesis' if first entry, or SHA-256 hash)"
        },
        {
          "type": "null",
          "description": "Null if not computable"
        }
      ]
    },
    "provenance": {
      "oneOf": [
        {
          "type": "object",
          "required": ["operation_id", "inputs_hash", "timestamp"],
          "properties": {
            "operation_id": {
              "type": "string",
              "const": "evolve.ledger.append"
            },
            "inputs_hash": {
              "type": "string",
              "pattern": "^[a-f0-9]{64}$",
              "description": "SHA-256 hash of canonical inputs"
            },
            "timestamp": {
              "type": "string",
              "format": "date-time",
              "description": "ISO8601 timestamp with Z timezone"
            },
            "seed": {
              "type": "integer",
              "description": "Deterministic seed used"
            }
          },
          "additionalProperties": true
        },
        {
          "type": "null",
          "description": "Null if not computable"
        }
      ]
    },
    "not_computable": {
      "oneOf": [
        {
          "type": "object",
          "required": ["reason"],
          "properties": {
            "reason": {
              "type": "string",
              "description": "Explanation of why result is not computable"
            },
            "missing_inputs": {
              "type": "array",
              "items": {"type": "string"},
              "description": "List of missing or invalid inputs"
            }
          }
        },
        {
          "type": "null",
          "description": "Null if result was computed successfully"
        }
      ]
    }
  },
  "additionalProperties": false,
  "x-abraxas": {
    "capability_id": "evolve.ledger.append",
    "version": "1.0.0",
    "deterministic": true,
    "no_influence_guarantee": false,
    "evidence_mode": "ledger_integrity"
  }
}
