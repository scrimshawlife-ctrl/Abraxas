{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://abraxas.dev/schemas/capabilities/claim_extract_output.json",
  "title": "Claim Extract Output",
  "description": "Output schema for memetic.claim_extract.items capability",
  "type": "object",
  "required": ["items", "provenance", "not_computable"],
  "properties": {
    "items": {
      "type": "array",
      "description": "Extracted claim items",
      "items": {
        "type": "object",
        "description": "Claim item dict"
      }
    },
    "provenance": {
      "type": ["object", "null"],
      "description": "Provenance envelope with SHA-256 hash",
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "memetic.claim_extract.items"
        },
        "inputs_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "timestamp_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - extraction is deterministic"
    }
  },
  "additionalProperties": false,
  "x-abraxas": {
    "capability_id": "memetic.claim_extract.items",
    "version": "1.0.0",
    "deterministic": true,
    "provenance_required": true
  }
}
