{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Render Output Input",
  "description": "Input schema for core.rendering.render_output capability",
  "type": "object",
  "required": ["draft_text"],
  "properties": {
    "draft_text": {
      "type": "string",
      "description": "The draft text to render"
    },
    "context": {
      "type": ["object", "null"],
      "description": "Optional context dictionary (intent, frame_id, etc.)",
      "additionalProperties": true
    },
    "seed": {
      "type": ["integer", "null"],
      "description": "Optional seed for SEED compliance"
    }
  },
  "additionalProperties": false
}
