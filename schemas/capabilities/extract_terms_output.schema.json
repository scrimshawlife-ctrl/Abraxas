{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Memetic Extract Terms Output",
  "description": "Output schema for memetic.extract.extract_terms capability",
  "type": "object",
  "required": ["term_candidates", "provenance", "not_computable"],
  "properties": {
    "term_candidates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["term_id", "term", "n", "count", "first_seen_ts", "last_seen_ts", "velocity_per_day", "half_life_est_s", "novelty_score", "propagation_score", "manipulation_risk", "tags", "provenance"],
        "properties": {
          "term_id": {"type": "string"},
          "term": {"type": "string"},
          "n": {"type": "integer"},
          "count": {"type": "integer"},
          "first_seen_ts": {"type": "string"},
          "last_seen_ts": {"type": "string"},
          "velocity_per_day": {"type": "number"},
          "half_life_est_s": {"type": "number"},
          "novelty_score": {"type": "number"},
          "propagation_score": {"type": "number"},
          "manipulation_risk": {"type": "number"},
          "tags": {"type": "array", "items": {"type": "string"}},
          "provenance": {"type": "object"}
        }
      }
    },
    "provenance": {
      "type": ["object", "null"],
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "memetic.extract.extract_terms"
        },
        "inputs_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
        "timestamp_utc": {"type": "string", "format": "date-time"}
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - extraction never fails"
    }
  },
  "additionalProperties": false
}
