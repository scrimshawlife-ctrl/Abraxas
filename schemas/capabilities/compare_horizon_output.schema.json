{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Forecast Compare Horizon Output",
  "description": "Output schema for forecast.horizon_policy.compare capability",
  "type": "object",
  "required": ["comparison_result", "provenance", "not_computable"],
  "properties": {
    "comparison_result": {
      "type": "integer",
      "enum": [-1, 0, 1],
      "description": "+1 if horizon > max_horizon, 0 if equal, -1 if below"
    },
    "provenance": {
      "type": ["object", "null"],
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "forecast.horizon_policy.compare"
        },
        "inputs_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
        "timestamp_utc": {"type": "string", "format": "date-time"}
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - comparison never fails"
    }
  },
  "additionalProperties": false
}
