{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Conspiracy CSP Horizon Clamp Output",
  "description": "Output schema for conspiracy.policy.horizon_clamp capability",
  "type": "object",
  "required": ["cap", "flags", "provenance", "not_computable"],
  "properties": {
    "cap": {
      "type": ["string", "null"],
      "description": "Horizon cap (days, weeks, months, years) or null if no clamp"
    },
    "flags": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Flags explaining the clamp decision"
    },
    "provenance": {
      "type": ["object", "null"],
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "conspiracy.policy.horizon_clamp"
        },
        "inputs_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
        "timestamp_utc": {"type": "string", "format": "date-time"}
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - clamping never fails"
    }
  },
  "additionalProperties": false
}
