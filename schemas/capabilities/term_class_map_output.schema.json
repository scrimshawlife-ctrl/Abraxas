{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Term Class Map Load Output",
  "description": "Output schema for forecast.term_class_map.load capability",
  "type": "object",
  "required": ["term_class_map", "provenance", "not_computable"],
  "properties": {
    "term_class_map": {
      "type": "object",
      "description": "Mapping from term (lowercase) to classification",
      "additionalProperties": {
        "type": "string",
        "enum": ["stable", "emerging", "contested", "volatile", "unknown"]
      }
    },
    "provenance": {
      "type": ["object", "null"],
      "description": "Provenance envelope with SHA-256 hash",
      "properties": {
        "operation_id": {
          "type": "string",
          "const": "forecast.term_class_map.load"
        },
        "inputs_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "timestamp_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "not_computable": {
      "type": "null",
      "description": "Always null - term class map loading never fails, returns empty dict on error"
    }
  },
  "additionalProperties": false
}
