{
  "profile": "dev",
  "coupling": {
    "boundaries": [
      "abx",
      "abraxas",
      "infra",
      "scheduler",
      "server",
      "client",
      "shared",
      "registry",
      "tools",
      "systemd"
    ],
    "allowed_cross_imports": [
      {
        "from": "abx",
        "to": "shared",
        "reason": "kernel + schemas + policy"
      },
      {
        "from": "abx",
        "to": "registry",
        "reason": "rune registry lookup"
      },
      {
        "from": "infra",
        "to": "shared",
        "reason": "policy + evidence helpers"
      },
      {
        "from": "tools",
        "to": "shared",
        "reason": "audit tooling only"
      }
    ],
    "min_rune_invoke_ratio": 0.7,
    "max_cross_boundary_imports": 0
  },
  "allow_runes": [
    "abx.doctor",
    "compression.detect",
    "infra.self_heal",
    "actuator.apply"
  ],
  "deny_runes": [],
  "stabilization": {
    "required_advisory_cycles": 3
  },
  "actuator": {
    "allow_actions": [
      "systemd.restart",
      "systemd.start",
      "systemd.stop",
      "ops.alert"
    ],
    "allow_services": [
      "abraxas-daemon"
    ]
  },
  "services": {
    "daemon_service": "abraxas-daemon",
    "disk_path": "/"
  }
}
